<!doctype html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('../partials/head') %>
  </head>
  <body>
    <div class="container-main">
      <%- include('../partials/sidebar') %>
      <main>
        <h1><%= title %></h1>
        <form action="" method="post">
          <div>
            <label for="first_name">First Name:</label>
            <input
              type="text"
              name="first_name"
              id="first_name"
              placeholder="First name"
              value="<%= typeof author === "undefined" ? "" : author.first_name %>"
              required
            />
            <label for="family_name">Family Name:</label>
            <input
              type="text"
              name="family_name"
              id="family_name"
              placeholder="Family name"
              value="<%= typeof author === "undefined" ? "" : author.family_name %>"
              required
            />
          </div>
          <div>
            <label for="date_of_birth">Date of birth:</label>
            <input
              type="date"
              name="date_of_birth"
              id="date_of_birth"
              value="<%= typeof author === "undefined" ? "" : author.date_of_birth %>"
            />
            <label for="date_of_death">Date of birth:</label>
            <input
              type="date"
              name="date_of_death"
              id="date_of_death"
              value="<%= typeof author === "undefined" ? "" : author.date_of_death %>"
            />
          </div>
          <button type="submit">Submit</button>
        </form>
        <% if (typeof errors !== "undefined") { %>
          <ul>
            <% for (let error of errors) { %>
              <li><%= error.msg %></li>
            <% } %>
          </ul>
        <% } %>
      </main>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
